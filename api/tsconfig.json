{
    "compilerOptions": {
        "allowJs": false,
        "noEmit": true, // Do not compile the JS (or TS) files in this project on build
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        // "target": "esnext"
    },
    "exclude": [ "node_modules" ],
    "include": [ "**/*.ts" ]
}